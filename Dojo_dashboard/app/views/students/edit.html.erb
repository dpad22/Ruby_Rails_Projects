<h1>Edit Student</h1>

<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <label for="student[fname]">First Name:</label>
    <input type="text" name="student[fname]" value="<%= @student.fname %>">

    <label for="student[lname]">Last Name:</label>
    <input type="text" name="student[lname]" value="<%= @student.lname %>">

    <label for="student[email">Email Address:</label>
    <input type="text" name="student[email]" value="<%= @student.email %>">
    
    <label for="student[dojo_id]">Dojo:</label>
    <select name="student[dojo_id]" >
        <option value="<%= @dojo.id %>"><%= @dojo.city%></option>
    </select>

    <input type="submit" value="Update">

</form>