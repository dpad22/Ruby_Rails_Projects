<%= content_for :left_column do %>
    <h1>All Posts</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Author</th>
            </tr>
        </thead>
        <% @posts.each do |post| %>
            <tbody>
                <tr>
                        <td><%= post.title %></td>
                        <td><%= post.content %></td>
                        <td><%= post.user.fname %> <%= post.user.lname %></td>
                </tr>
                
            </tbody>
        <% end %>
    </table>

<% end %>

<%= content_for :middle_column do %>

    <h1>New Post</h1>
    
    <form action="/posts" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div class="form-group">
            <label for="post[title]">Title</label>
            <input type="text" class="form-control" name="post[title]" >
        </div>
        <div class="form-group">
            <label for="post[content]">Content</label>
            <input type="textarea" class="form-control" name="post[content]" >
        </div>
        <div class="form-group">
            <label for="post[user_id]">Author</label>
            <select class="form-control" class="form-control" name="post[user_id]">
                <% @users.each do |user| %>
                <option value="<%= user.id %>"> <%= user.fname %> <%= user.lname %></option>
                <% end %>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

<% end %>

<%= content_for :right_column do %>

<h1>Go to Users Page</h1>
<button class="btn btn-info " ><a href="/users">All Users</a></button>

<% end %>
